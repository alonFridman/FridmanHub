{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "web/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/calendar/list", "function": "calendarList" },
      { "source": "/events/range", "function": "eventsRange" },
      { "source": "/config/**", "function": "configApi" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
