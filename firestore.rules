rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isFamilyMember() {
      return request.auth != null && request.auth.token.email_verified == true;
    }

    match /familyConfig/{docId} {
      allow read, write: if isFamilyMember();
    }

    match /calendarTokens/{userId} {
      allow read, write: if isFamilyMember() && request.auth.token.email == resource.data.ownerEmail;
    }

    match /kids/{kidId} {
      allow read, write: if isFamilyMember();
    }

    match /schoolSchedules/{scheduleId} {
      allow read, write: if isFamilyMember();
    }
  }
}
